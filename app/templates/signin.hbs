

<AuthTemplate>
    <h2>Log in to</h2>
    <h2>your <span style="color: rgb(64, 195, 221);"> account</span></h2>
    
    <form {{on "submit" this.login}}>
        <div class="forContent">
        <label for="email">Email</label>
        <Input @type="text" @value={{this.email}} id="email" name="email" placeholder="Email" />
        </div>
        
        <div class="forContent">
        <label for="password">Password</label>
        <Input @type="password" @value={{this.password}} id="password" name="password" placeholder="Password" />
        {{#if this.error}}
            <p class="invalid">âœ— {{this.error}}</p>
        {{/if}}
        </div>
        
        <input id="submit" type="submit" value="Login">
    </form>

    <p>Need an account? <LinkTo style="color: rgb(64, 195, 221);" @route="signup"> Sign Up</LinkTo></p>
</AuthTemplate>
