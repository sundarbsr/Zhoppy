<h2 class="text-2xl font-bold mb-4">Sellers Management</h2>

<table class="sellers-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model as |user|}}
      <tr>
        <td>{{user.id}}</td>
        <td>{{user.name}}</td>
        <td>{{user.email}}</td>
        <td>{{user.seller-data.company-name}}</td>
        <td>{{user.seller-data.selling-status}}</td>
        <td>
          {{#if (eq user.seller-data.selling-status "Approved")}}
            <button type="button" class="action-btn red-btn" {{on "click" (fn this.revokeSeller user)}}>
              Revoke
            </button>
          {{else}}
            <button type="button" class="action-btn green-btn" {{on "click" (fn this.approveSeller user)}}>
              Approve
            </button>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
