<h2 class="form-heading">Edit Product</h2>

<form {{on "submit" this.submitProduct}} class="product-form">
  <div class="form-group">
    <label class="form-label">Product Name</label>
    <input type="Â¯text" value={{this.model.name}} {{on "input" (fn this.updateField "name")}} class="form-input" />
  </div>

  <fieldset class="form-fieldset">
    <legend class="form-legend">Product Details</legend>

    <div class="form-group">
      <label class="form-label">Image URL</label>
      <input type="text" value={{this.model.product-details.image}} {{on "input" (fn this.updateProductDetail "image")}} class="form-input" />
    </div>

    <div class="form-group">
      <label class="form-label">Brand</label>
      <input type="text" value={{this.model.product-details.brand}} {{on "input" (fn this.updateProductDetail "brand")}} class="form-input" />
    </div>

    <div class="form-group">
      <label class="form-label">Category</label>
      <select {{on "change" (fn this.updateProductDetail "category")}} class="form-input">
        <option value="" >Select</option>
        <option value="shirt" selected={{this.isCategory "shirt"}}>Shirt</option>
        <option value="pant" selected={{this.isCategory "pant"}}>Pant</option>
        <option value="saree" selected={{this.isCategory "saree"}}>Saree</option>
      </select>
    </div>

    <div class="form-group">
     <label class="form-label">Color</label>
        <select {{on "change" (fn this.updateProductDetail "color")}} class="form-input">
            <option value="">Select</option>
            <option value="Red" selected={{this.isColor "Red"}}>Red</option>
            <option value="Blue" selected={{this.isColor "Blue"}}>Blue</option>
            <option value="Green" selected={{this.isColor "Green"}}>Green</option>
            <option value="Black" selected={{this.isColor "Black"}}>Black</option>
            <option value="White" selected={{this.isColor "White"}}>White</option>
            <option value="Pink" selected={{this.isColor "Pink"}}>Pink</option>
        </select>
    </div>

    <div class="form-group">
      <label class="form-label">Details</label>
      <textarea value={{this.model.product-details.detials}} {{on "input" (fn this.updateProductDetail "detials")}} class="form-input textarea-input"></textarea>
    </div>
  </fieldset>

  <!-- Inventory Data -->
  <fieldset class="form-fieldset">
    <legend class="form-legend">Inventory</legend>

    <div class="form-group">
      <label class="form-label">Price</label>
      <input value={{this.model.inventory-data.price}} type="number" {{on "input" (fn this.updateInventoryData "price")}} class="form-input" />
    </div>

    <div class="form-group">
      <label class="form-label">Discount (%)</label>
      <input value={{this.model.inventory-data.discount}} type="number" {{on "input" (fn this.updateInventoryData "discount")}} class="form-input" />
    </div>

    <div class="form-group">
      <label class="form-label">Stock Count</label>
      <input value={{this.model.inventory-data.count}} type="number" {{on "input" (fn this.updateInventoryData "count")}} class="form-input" />
    </div>
  </fieldset>

  <fieldset class="form-fieldset">
    <legend class="form-legend">Product Status</legend>

    <div class="form-group">
      <label class="form-label">Status</label>
      <select {{on "change" (fn this.updateVisibility)}} class="form-input">
            <option value="">Select</option>
            <option value="visible" selected={{this.isVisible "visible"}}>Visible</option>
            <option value="not-visible" selected={{this.isVisible "not-visible"}}>Not Visible</option>
        </select>
    </div>

  </fieldset>

  <button type="submit" class="submit-button">Update Product</button>
</form>
